{
  "name": "typing.css",
  "version": "1.0.0",
  "description": "a component for type",
  "main": "index.js",
  "scripts": {
    "_watch": "node-sass src/typing.scss dist/typing.css --watch",
    "_build": "node-sass src/typing.scss dist/typing.css",
    "sync": "browser-sync start --server --files dist,demo --startPath demo",
    "dev": "run-p _watch sync",
    "postcss": "postcss dist/typing.css --output dist/typing.css",
    "build": "run-s _build postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wizard67/typing.css.git"
  },
  "keywords": [
    "css"
  ],
  "author": "Wizard67",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Wizard67/typing.css/issues"
  },
  "homepage": "https://github.com/Wizard67/typing.css#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "browser-sync": "^2.18.13",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1"
  }
}
